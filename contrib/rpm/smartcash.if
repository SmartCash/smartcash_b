##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`smartcash_search_lib',`
	gen_require(`
		type smartcash_var_lib_t;
	')

	allow $1 smartcash_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

